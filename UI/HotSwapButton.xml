<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">

	<Button name="HotSwapButton" parent="UIParent" frameStrata="LOW" enableMouse="true"
		movable="true" hidden="true" toplevel="true">
		<Size>
			<AbsDimension x="32" y="32" />
		</Size>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon" setAllPoints="true" />
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				HotSwapButton_OnLoad()
			</OnLoad>
			<OnMouseDown>
				HotSwapButton_OnMouseDown()
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
	</Button>
</Ui>